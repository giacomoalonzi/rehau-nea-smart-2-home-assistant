# REHAU Credentials
REHAU_EMAIL=your@email.com
REHAU_PASSWORD=yourpassword

# MQTT Configuration
MQTT_HOST=homeassistant.local
MQTT_PORT=1883
MQTT_USER=mqtt_user
MQTT_PASSWORD=mqtt_password

# API Configuration
API_PORT=3000

# Logging
LOG_LEVEL=info

# Intervals (in seconds)
ZONE_RELOAD_INTERVAL=300        # Reload zones every 5 minutes (default: 300)
REFERENTIALS_RELOAD_INTERVAL=86400  # Reload referentials every 24 hours (default: 86400)
TOKEN_REFRESH_INTERVAL=21600    # Refresh token every 6 hours (default: 21600)

# Device Naming
USE_GROUP_IN_NAMES=true         # Include group name in device names (e.g., "Upstairs - Room1" vs "Room1")

# Command Retry Configuration
COMMAND_RETRY_TIMEOUT=30        # Timeout before retrying a command (in seconds, default: 30)
COMMAND_MAX_RETRIES=3           # Maximum number of retry attempts (default: 3)
